set nocompatible              " be iMproved, required
filetype off                  " required

" Basic settings

set encoding=utf-8

set t_Co=256

syntax on
set number
set relativenumber
set smartindent
set tabstop=2
set expandtab
set shiftwidth=2
set cindent
set autoindent

set nrformats-=octal

filetype plugin on



set foldmethod=indent
set foldlevel=99

nnoremap <space> za

